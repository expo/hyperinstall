    "instapromise": "latest",
    "lodash": "^4.17.13",
    "minimist": "^1.2.3",
    "npm-package-arg": "^4.2.0",
    "rimraf": "^2.5.4",
    "yargs": "^6.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015-node6": "^0.3.0",
